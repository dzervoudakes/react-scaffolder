{
  "compilerOptions": {
    "allowJs": false,
    "baseUrl": ".",
    "esModuleInterop": true,
    "jsx": "react",
    "module": "es6",
    "moduleResolution": "node",
    "outDir": "./dist/",
    "paths": {
      "@src/*": ["./src/*"],
      "@shared/*": ["./src/components/shared/*"],
      "react-dom": ["@hot-loader/react-dom"]
    },
    "sourceMap": true,
    "strictNullChecks": true,
    "target": "es5"
  },
  "include": ["./src/", "./config/jest/jest-dom.d.ts"],
  "typeRoots": ["node_modules/@types", "./typings.d.ts"]
}
